@import '/template/purchase/purchase.wxss';
@import '/template/empty/empty.wxss';

.container {
  padding-left: 30rpx;
  padding-right: 30rpx;
  padding-bottom: 130rpx;
}

.orders {
  border-top: 2rpx solid #ddd;
  border-bottom: 2rpx solid #ddd;
}

.order {
  display: flex;
  align-items: center;
  height: 168rpx;
}

.order + .order {
  border-top: 2rpx solid #ddd;
}

.order-image {
  width: 140rpx;
  height: 140rpx;
}

.order-text {
  display: flex;
  flex-direction: column;
  justify-content: center;
  width: 410rpx;
  padding-left: 10rpx;
}

.order-text-title {
  font-size: 30rpx;
  font-weight: 200;
}

/* 商品描述，只允许显示一行，最多16个汉字 */
.order-text-descs {
  font-size: 24rpx;
  margin-top: 8rpx;
  word-break: keep-all;
  white-space: nowrap; 
  overflow: hidden; 
}

/* 买家留言，允许显示两行，最多28个汉字 */
.order-text-message {
  font-size: 24rpx;
  margin-top: 8rpx;
  max-height: 56rpx;
  overflow: hidden;
}

.order-number {
  flex-shrink: 0;
  display: flex;
  flex-direction: column;
  align-items: flex-end;
  width: 140rpx;
  padding-right: 10rpx;
}

.order-number-price {
  text-align: right;
  margin-bottom: 8rpx;
}

.shopping-foot {
  position: fixed;
  z-index: 99;
  width: 100%;
  height: 100rpx;
  left: 0;
  bottom: 0;
  display: flex;
  align-items: center;
  justify-content: space-between;
  font-size: 28rpx;
  background-color: #e8e8e8;
  padding-left: 20rpx;
  padding-right: 20rpx;
}

.summary {
  flex-grow: 1;
  font-size: 26rpx;
  color: #666;
  margin-right: 20rpx;
}

.summary-num {
  display: flex;
  justify-content: flex-end;
  margin-bottom: 6rpx;
}

.summary-amount {
  display: flex;
  justify-content: flex-end;
}

.summary-value {
  font-weight: 400;
  margin-left: 10rpx;
}

.button {
  display: flex;
  align-items: center;
  justify-content: center;
  width: 220rpx;
  height: 68rpx;
  color: #fff;
  border-radius: 8rpx;
}

.button-shopping {
  background-color: #393;
}

.button-submit {
  background-color: #e64240;
}
